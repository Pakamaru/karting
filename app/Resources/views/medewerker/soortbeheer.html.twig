{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li class=""><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li class=""><a href="{{ path('beheer') }}"><span class="badge">{{ activiteiten|length }}</span>beheer</a></li>
    <li class="active"><a href="{{ path('soortbeheer') }}"><span class="badge">{{ soorten|length }}</span>soort beheer</a></li>
    <li class=""><a href="{{ path('deelnemerbeheer') }}"><span class="badge">{{ deelnemers|length }}</span>deelnemer beheer</a></li>
{% endblock %}
{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle activiteiten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>Naam</td>
                <td>Minimale Leeftijd</td>
                <td>Tijdsduur</td>
                <td>Prijs</td>
                <td>bewerken</td>
                <td>verwijderen</td>
            </tr>
            </thead>
            <tbody>
            {% for soort in soorten %}
                <tr>
                    <td>
                        {{ soort.naam }}
                    </td>
                    <td>
                        {{ soort.minleeftijd }}
                    </td>

                    <td>
                        {{ soort.tijdsduur }}
                    </td>
                    <td>
                        {{ soort.prijs }}
                    </td>
                    <td title="bewerk de gegevens van deze activiteit">


                        <a href="{{ path('updatesoort', {'id':soort.id}) }}" >
                            <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                        </a>
                    </td>
                    <td title="verwijder deze activiteit is definitief">
                        <a href="{{ path('deletesoort', {'id':soort.id}) }}" >
                            <span class="glyphicon glyphicon-minus" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="6">
                    <a href="{{ path('soortadd') }}">
                        <span class="glyphicon glyphicon-plus" style="color:red"></span>
                    </a>
                </td>

            </tr>

            </tbody>

        </table>


    </section>

{% endblock %}
